<%= tinymce_assets %>
<%= tinymce %>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "30x10", :class => 'tinymce' %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.number_field :stock, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :sell_price %><br>
    <%= f.text_field :sell_price, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.text_field :weight, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :thumb %><br>
    <%= f.text_field :thumb, size: 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
